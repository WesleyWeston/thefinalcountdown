
		<div class = "container ">

			<div class ="row justify-content-center ">


 <h1>This is post <%=@post.id%> </h1>

<p><%= @post.description %></p>

<% if @post.image.url == nil %>
<%else%>
<div class="justify-content-center col-mb-4 shadow-sm ">
<a href="<%= @post.image.url %>"><%=image_tag (@post.image.url :class => "img_fluid") %></a>
<%end%>
</div>
</div>
</div>


    <%= form_with url: post_comments_path(@post.id),scope: :comment, method: :post, local: true do |form| %>
    <%= render partial: '/comments/form', object: form %>
   
        <div class="submit-field">
      <%= form.submit%>


    </div>
     <%end%>
     <div class ="row justify-content-center ">
		<%@comment.order("id").each do |x| %>



				

				<div class="justify-content-center col-mb-4 shadow-sm ">
					
								<h6>Comment #<%= x.id %> by <a href="<%= "/users/#{User.find(x.user_id).id}" %>"><%=User.find_by_id(x.user_id).username%></a>
				</h6>

				<h6>
					<%= x.comment_content %></a>
					
					
				</h6>





			<%end%>
		</div>
		</div>



     <%yield%>


